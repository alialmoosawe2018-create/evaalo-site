# Example Nginx configuration for Evaalo Backend
# Place this file in /etc/nginx/sites-available/evaalo-backend
# Then create a symlink: sudo ln -s /etc/nginx/sites-available/evaalo-backend /etc/nginx/sites-enabled/

upstream evaalo_backend {
    server localhost:3000;
    keepalive 64;
}

server {
    listen 80;
    server_name api.evaalo.com;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name api.evaalo.com;

    # SSL certificates (update paths)
    ssl_certificate /etc/letsencrypt/live/api.evaalo.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.evaalo.com/privkey.pem;
    
    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Logging
    access_log /var/log/nginx/evaalo-backend-access.log;
    error_log /var/log/nginx/evaalo-backend-error.log;

    # Increase timeouts for webhooks
    proxy_read_timeout 300s;
    proxy_connect_timeout 75s;

    # Increase body size limit for file uploads
    client_max_body_size 100M;

    # API routes
    location /api {
        proxy_pass http://evaalo_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Specific settings for webhooks (longer timeout)
        location /api/webhooks {
            proxy_pass http://evaalo_backend;
            proxy_read_timeout 30s;
            proxy_send_timeout 30s;
        }
    }

    # Health check endpoint
    location /api/health {
        proxy_pass http://evaalo_backend;
        access_log off;
    }

    # Root endpoint
    location / {
        proxy_pass http://evaalo_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

