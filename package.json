{
  "name": "evaalo-monorepo",
  "version": "1.0.0",
  "description": "Evaalo Career Portal - Monorepo with Frontend and Backend",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces && rimraf node_modules",
    "type-check": "npm run type-check --workspace=apps/backend"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "",
  "license": "ISC"
}

